@model WebApp.Models.CategoryViewModel;

@{
    var action = ViewData["Action"] as string; 
}

<form class="floating-labels" method="POST" action="@Url.Action(action,"Category")" asp-antiforgery="true">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Active" />

    <div class="form-group">
        <label for="Name">Nombre</label>
        <input class="form-control mb-3" id="Name" asp-for="Name">

        <label for="Order">Orden</label>
        <input type="number" class="form-control" id="Order" asp-for="Order">
    </div>

    <div class="d-flex justify-content-end buttonFooter">
        <button id="btn-cancel" type="button" class="btn btn-cancel mr-2"
                onclick="window.location.href='@Url.Action("Index","Category")'">
            Cancelar
        </button>
        <button id="btn-submit" type="submit" class="btn btn-themecolor">Guardar</button>
    </div>
</form>