@{
    ViewData["Title"] = "Categorías";
}

<div class="d-flex justify-content-end">
    <button id="btn-create" type="button" class="btn btn-themecolor" onclick="location.href='@Url.Action("Create", "Category")'">
        Nueva categoría
    </button>
</div>

<div class="text-center">
    <h5 class="display-6">Categorías</h5>
</div>

<div>
    <table id="categoryTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Orden</td>
                <td>Activo</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-end buttonFooter">
    <button type="button" class="btn btn-back" onclick="window.location.href='@Url.Action("Index","Home")'">
        Volver
    </button>
</div>

@section scripts {
    <script src="~/js/views/category/index.js" type="text/javascript"></script>
}